@model BankSystem.Models.Customer

@{
    ViewData["Title"] = "AddCustomer";
}

<div class=" row ml-1">
    <h5>Customer Information</h5>
</div>
<hr />
<div class="container">
    <div class="col-md-12">
        <div>
            <form asp-action="AddCustomer" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="card  " style="height:250px ">
                    <div class="card-body">
                    <div class="row mt-1 ml-5 ">
                        <div class="form-group col-5 ">
                            <label asp-for="EmailId" class="control-label"> Customer Email Id :</label>
                            <input asp-for="EmailId" class="form-control " value="@ViewBag.email" readonly="readonly" />
                            <span asp-validation-for="EmailId" class="text-danger"></span>
                        </div>
                        <div class="form-group  ml-3 col-5">
                            <label asp-for="CustomerName" class="control-label">Customer Name :</label>
                            <input asp-for="CustomerName" class="form-control" />
                            <span asp-validation-for="CustomerName" class="text-danger"></span>
                        </div>



                    </div>
                    <div class="row ml-2 mt-2">
                        <div class="form-group ml-5 col-3">
                            <label asp-for="Gender" class="control-label">Gender</label>
                            <select asp-for="Gender" class="form-control">
                                <option value=" ">Select Gender</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                                <option value="Optional">Optional</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </div>
                        <div class="form-group ml-5 col-3 ">
                            <label asp-for="DateOfBirth" class="control-label "></label>
                            <input asp-for="DateOfBirth" class="form-control " type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                        <div class="form-group ml-4 col-3">
                            <label asp-for="MobileNo" class="control-label"></label>
                            <input asp-for="MobileNo" class="form-control" />
                            <span asp-validation-for="MobileNo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                    </div>
                <div class="card">
                    <div class="card-body ">
                        <div class="form-group  ml-5 col-10">
                            <label asp-for="Address" class="control-label"></label>
                            <textarea asp-for="Address" class="form-control mr-5"></textarea>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="row ml-5 ">
                            <div class="form-group   col-3 ">
                                <label asp-for="City" class="control-label"></label>
                                <input asp-for="City" class="form-control" />
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>
                            <div class="form-group  ml-5 col-3 ">
                                <label asp-for="State" class="control-label"></label>
                                <input asp-for="State" class="form-control" />
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>
                            <div class="form-group ml-5 col-3 ">
                                <label asp-for="Pin" class="control-label"></label>
                                <input asp-for="Pin" class="form-control" />
                                <span asp-validation-for="Pin" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group mt-2">
                    <input type="submit" value="Update" class="btn btn-secondary" />

                </div>
            </form>
        </div>
    </div>
</div>

